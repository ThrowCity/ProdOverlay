{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"type": "object",
	"properties": {
		"name": {
			"type": "string"
		},
		"age": {
			"description": "Age in years",
			"type": "integer",
			"minimum": 0
		}
	},
	"additionalProperties": false,
	"required": ["name", "age"],
	"default": {
		"name": "Hello world!",
		"age": 0
	}
}
